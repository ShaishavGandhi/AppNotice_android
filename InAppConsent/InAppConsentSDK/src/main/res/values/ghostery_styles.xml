<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="ghostery_AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="ghostery_AppTheme" parent="ghostery_AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Layout Styles -->
    <style name="ghostery_style_layout_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ghostery_style_layout_footer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ghostery_style_custom_list_adapter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ghostery_style_fragment_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ghostery_style_fragment_detail_header" parent="ghostery_style_fragment_detail">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ghostery_loading_dialog_theme" parent="Theme.AppCompat.Light">
        <item name="android:alertDialogStyle">@style/ghostery_CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/ghostery_transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ghostery_CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/ghostery_transparent</item>
        <item name="android:bottomDark">@color/ghostery_transparent</item>
        <item name="android:bottomMedium">@color/ghostery_transparent</item>
        <item name="android:centerBright">@color/ghostery_transparent</item>
        <item name="android:centerDark">@color/ghostery_transparent</item>
        <item name="android:centerMedium">@color/ghostery_transparent</item>
        <item name="android:fullBright">@color/ghostery_transparent</item>
        <item name="android:fullDark">@color/ghostery_transparent</item>
        <item name="android:topBright">@color/ghostery_transparent</item>
        <item name="android:topDark">@color/ghostery_transparent</item>
    </style>
</resources>