<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/item_detail_container"
    android:background="@drawable/ghostery_border_top_bottom"
    android:gravity="center_vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/header_company"
        style="@style/ghostery_style_layout_header"
        android:gravity="left"
        android:text="@string/ghostery_header_company" />

    <TextView
        android:id="@+id/header_ad_personalization"
        style="@style/ghostery_style_layout_header"
        android:gravity="right"
        android:text="@string/ghostery_header_ad_personalization" />

</LinearLayout>