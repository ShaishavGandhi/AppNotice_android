<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:padding="8dp"
    tools:context=".ListActivity" >

    <TextView
        android:id="@+id/tracker_name"
        style="@style/ghostery_style_custom_list_adapter"
        android:textSize="18sp" />

    <ToggleButton
        android:id="@+id/opt_in_out_button"
        style="@style/ghostery_style_custom_list_adapter"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:onClick="onOptoutClick"
        android:checked="false" />

    <ImageView
        android:id="@+id/tracker_logo"
        style="@style/ghostery_style_custom_list_adapter"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/opt_in_out_button"
        android:paddingRight="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart" />

</RelativeLayout>