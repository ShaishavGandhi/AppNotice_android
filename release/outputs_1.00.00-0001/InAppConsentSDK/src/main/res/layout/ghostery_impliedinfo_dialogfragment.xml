<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|top"
    tools:context=".ImpliedIntro_DialogFragment"
    android:background="#e5e5e5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ghostery_dialog_header_text_color"
        android:text="@string/ghostery_dialog_header_text"
        android:id="@+id/textView_title"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/scrollView3"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ghostery_dialog_implicit_message"
            android:id="@+id/textView_message"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:textColor="@android:color/black"
            android:ellipsize="end"/>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ghostery_dialog_button_preferences"
            android:id="@+id/preferences_button"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_weight=".6"
            android:backgroundTint="#333333" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ghostery_dialog_button_close"
            android:id="@+id/close_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
