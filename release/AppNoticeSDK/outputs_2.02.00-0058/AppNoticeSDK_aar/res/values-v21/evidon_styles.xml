<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="evidon_AppNoticeTheme" parent="evidon_AppNoticeTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="evidon_AppNoticeTheme.Dark" parent="evidon_AppNoticeTheme.Base.Dark">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="evidon_AppNoticeTheme.Button" parent="evidon_AppNoticeTheme">
        <item name="colorAccent">@color/evidonColorButtonPrimary</item>
        <item name="android:textColor">@color/evidonColorButtonTextPrimary</item>
    </style>

    <style name="evidon_AppNoticeTheme.Button.Secondary" parent="evidon_AppNoticeTheme">
        <item name="colorAccent">@color/evidonColorButtonSecondary</item>
        <item name="android:textColor">@color/evidonColorButtonTextSecondary</item>
    </style>

    <style name="evidon_inverse_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/evidonColorButtonTextPrimary</item>
        <item name="android:textColor">@color/evidonColorPrimary</item>
    </style>

</resources>