<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="ghostery_AppNoticeTheme" parent="ghostery_AppNoticeTheme.Base" />

    <style name="ghostery_AppNoticeTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/ghosteryColorPrimary</item>
        <item name="colorPrimaryDark">@color/ghosteryColorPrimaryDark</item>
        <item name="colorAccent">@color/ghosteryColorAccent</item>
        <item name="ghostery_colorBackgroundPrimary">@color/ghosteryColorPrimary</item>
    </style>

    <style name="ghostery_AppNoticeTheme.Base.Dark" parent="Theme.AppCompat">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/ghosteryColorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/ghosteryColorPrimaryDark.Dark</item>
        <item name="colorAccent">@color/ghosteryColorAccent.Dark</item>
        <item name="ghostery_colorBackgroundPrimary">@color/ghosteryColorPrimary.Dark</item>
    </style>

    <style name="ghostery_AppNoticeTheme.Button" parent="ghostery_AppNoticeTheme">
        <item name="colorAccent">@color/ghosteryColorButtonPrimary</item>
        <item name="android:textColor">@color/ghosteryColorButtonTextPrimary</item>
    </style>

    <style name="ghostery_AppNoticeTheme.Button.Secondary" parent="ghostery_AppNoticeTheme">
        <item name="colorAccent">@color/ghosteryColorButtonSecondary</item>
        <item name="android:textColor">@color/ghosteryColorButtonTextSecondary</item>
    </style>

    <style name="ghostery_inverse_button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/ghosteryColorButtonTextPrimary</item>
        <item name="android:textColor">@color/ghosteryColorPrimary</item>
    </style>

</resources>