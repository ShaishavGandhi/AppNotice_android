<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|top"
    tools:context=".ImpliedIntro_DialogFragment"
    android:background="#e5e5e5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/bric_header_text_color"
        android:text="@string/ghostery_dialog_header_text"
        android:id="@+id/textView_title"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ghostery_dialog_explicit_message"
        android:id="@+id/textView_message"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ghostery_dialog_button_preferences"
        android:textColor="@color/bric_access_button_text_color"
        android:background="@color/bric_access_button_color"
        android:id="@+id/preferences_button"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ghostery_dialog_button_consent"
            android:textColor="@color/bric_access_button_text_color"
            android:background="@color/bric_access_button_color"
            android:id="@+id/accept_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ghostery_dialog_button_decline"
            android:textColor="@color/bric_decline_button_text_color"
            android:id="@+id/decline_button"
            android:layout_weight="1"
            android:background="@color/bric_decline_button_color" />

    </LinearLayout>

</LinearLayout>
