<!-- This layout is a two-pane layout for tablet devices -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ListActivity" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="@drawable/ghostery_border_right"
        android:orientation="vertical" >

        <include
            android:id="@+id/header"
            android:layout_alignParentTop="true"
            layout="@layout/ghostery_layout_header" />

        <fragment
            android:id="@+id/item_list"
            android:name="com.ghostery.privacy.inappconsentsdk.fragments.ListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header" />

        <include
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            layout="@layout/ghostery_layout_footer" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/item_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </FrameLayout>

</LinearLayout><!-- From: file:/C:/Dev/InAppConsent_android/InAppConsent/InAppConsentSDK/src/main/res/layout/ghostery_activity_twopane.xml -->